<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.PrepareSongActivity" android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_mic_48dp"
                android:id="@+id/imageButton"/>
    </FrameLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

        <TextView
                android:text="@string/last_records"
                android:gravity="start|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView" android:textStyle="bold"
                android:textSize="24sp"/>
    </RelativeLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/record_fragment_container">

    </FrameLayout>


</LinearLayout>